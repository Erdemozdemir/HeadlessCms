@model EdufaceCms.Entities.Concrete.StudentEntity
@using EdufaceCms.BusinessLayer.Managers.EntityFramework;
@using EdufaceCms.Entities.Concrete;

@{
    ViewData["Title"] = "Yeni Öğrenci Oluştur";
    Layout = "~/Views/Shared/Layouts/_Layout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TC" class="control-label"></label>
                <input asp-for="TC" class="form-control" />
                <span asp-validation-for="TC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="CityId" class="col-sm-2 col-form-label">Şehir </label>
                    <select asp-for="CityId" asp-items='@new EfGenericRepository<CityEntity>().GetSelectListItems("Name","Id","Şehir Seçiniz",null)' class="custom-select"></select>
            </div>
            <div class="form-group">
                    <label asp-for="CountyId" class="col-sm-2 col-form-label">İlçe </label>
                    <select asp-for="CountyId" asp-items='@new EfGenericRepository<CountyEntity>().GetSelectListItems("Name","Id","İlçe Seçiniz",null)' class="custom-select"></select>
            </div>
            <div class="form-group">
                    <label asp-for="BranchId" class="col-sm-2 col-form-label">Şube </label>
                    <select asp-for="BranchId" asp-items='@new EfGenericRepository<BranchEntity>().GetSelectListItems("Name","Id","Şube Seçiniz",null)' class="custom-select"></select>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CellPhone" class="control-label"></label>
                <input asp-for="CellPhone" class="form-control" />
                <span asp-validation-for="CellPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmergencyPerson" class="control-label"></label>
                <input asp-for="EmergencyPerson" class="form-control" />
                <span asp-validation-for="EmergencyPerson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proximity" class="control-label"></label>
                <input asp-for="Proximity" class="form-control" />
                <span asp-validation-for="Proximity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Neighborhood" class="control-label"></label>
                <input asp-for="Neighborhood" class="form-control" />
                <span asp-validation-for="Neighborhood" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reference" class="control-label"></label>
                <input asp-for="Reference" class="form-control" />
                <span asp-validation-for="Reference" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listelemeye geri dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
