@model IEnumerable<EdufaceCms.Entities.Concrete.StudentPaymentEntity>

@{

    Layout = "~/Views/Shared/Layouts/_Layout.cshtml";
}


<h4>@ViewData["StudentName"] </h4>
<p>
    <a asp-action="Create">Yeni Oluştur</a>
</p>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AdvancePaymentDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstPaymentDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InstallementCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentType.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AdvancePaymentPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModUser)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdvancePaymentDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstPaymentDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstallementCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentType.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdvancePaymentPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModUser)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>