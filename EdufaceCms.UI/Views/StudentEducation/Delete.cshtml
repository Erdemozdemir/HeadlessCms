        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalHour)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ListPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SavePrice)
        </dt>
        <dd class="col-sm-10">
